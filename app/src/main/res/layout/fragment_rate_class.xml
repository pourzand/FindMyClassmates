<!-- fragment_rate_class.xml -->
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Class Name at the top -->
        <TextView
            android:id="@+id/classNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Name"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- RecyclerView to display ratings -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ratingsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="800px"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"/>

        <!-- Back Button at the bottom -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_arrow"
            android:contentDescription="@string/back_button_description"
            android:padding="8dp"
            android:layout_gravity="center_horizontal"
            android:onClick="onBackClicked"/>

        <!-- Button to navigate to RatingFormFragment -->
        <Button
            android:id="@+id/buttonAddRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Rating"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
